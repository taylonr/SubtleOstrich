@{
    ViewBag.Title = "Activity";
}
<script src="@Url.Content("~/Scripts/subtleOstrich/activity.js")"></script>
<div class="sidebar pull-left">
    <div class="aqua-panel">
        <div class="aqua-panel-header">
            <h2>March</h2>
        </div>
        <div class="aqua-panel-content">
            <div class="info-panel clearfix">
                <div class="span1">
                    <a href="#" class="aqua-shortcut text-align-center">
                        <span class="modernpics newline">120</span>
                        <span class="label label-info">Sparring</span>
                    </a>
                </div>

                <div class="span1">
                    <a href="#" class="aqua-shortcut text-align-center">
                        <span class="modernpics newline">20</span>
                        <span class="label label-info">Technique</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="span3 pull-left" ng-controller="ActivityControl">
        <form ng-submit="save()">
            <div>
                Today I did
                <input type="hidden" ng-model="date" />
                <input type="text" ng-model="name" required />
                <input class="btn-primary" type="submit" value="add">
       </div>
        </form>

        <ul class="unstyled">
            <li class="aqua-well-mini" ng-repeat="act in activity">
                <form ng-submit="delete()">
                    <h2>{{act.Name}}</h2>
                    {{act.Note}}
                    <span class="pull-right"><a href="#" ng-click="delete( act.Id )"><i class="icon-trash-blue"></i></a></span>
                </form>
            </li>
        </ul>
    </div>


<div class="sidebar pull-right">
    <div class="aqua-panel">
        <div class="aqua-panel-header">
            <h2>2013</h2>
        </div>
        <div class="aqua-panel-content">
            <div class="info-panel clearfix">
                <div class="span1">
                    <a href="#" class="aqua-shortcut text-align-center">
                        <span class="modernpics newline">24</span>
                        <span class="label label-info">Sparring</span>
                    </a>
                </div>

                <div class="span1">
                    <a href="#" class="aqua-shortcut text-align-center">
                        <span class="modernpics newline">40</span>
                        <span class="label label-info">Technique</span>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</div>


